<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.plugin.phone"
      version="0.1.0">
    <name>phone_block</name>
    <description>phone_block</description>
    <license>MIT</license>
    <keywords>phonegap,calendar</keywords>


    <js-module src="www/phone_block.js" name="block">
        <clobbers target="window.phone_block" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="phone_block">
                <param name="android-package" value="com.plugin.phone.block_call"/>
            </feature>
        </config-file>

        <source-file src="src/phone_block.java" target-dir="com.plugin.phone" />      
     </platform>          
</plugin>